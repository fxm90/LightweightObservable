# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Execute SwiftFormat and treat any formatting errors as real errors."
  lane :exec_swiftformat do
    Dir.chdir("..") do
      # Move outside of `fastlane/` directory.
      # See <https://docs.fastlane.tools/advanced/fastlane/#directory-behavior> for details.
      sh("Pods/SwiftFormat/CommandLineTool/swiftformat", "../", "--lint")
    end
  end

  desc "Execute SwiftLint and treat any formatting errors as real errors."
  lane :exec_swiftlint do
    swiftlint(
      config_file: ".swiftlint.yml",
      strict: true,
      executable: "Pods/SwiftLint/swiftlint"
    )
  end

  desc "Execute tests."
  lane :exec_tests do
    run_tests(workspace: "LightweightObservable.xcworkspace",
              devices: ["iPhone 11 Pro"],
              scheme: "LightweightObservable")
  end

  desc "Execute validation of library."
  lane :exec_pod_lib_lint do
    Dir.chdir("..") do
      # Move outside of `Example/` directory.
      pod_lib_lint()
    end
  end
end
